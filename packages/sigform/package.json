{
  "name": "sigform",
  "version": "0.12.5",
  "description": "Nestable react form UI with Signals",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "types": "./dist/src/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "prepublishOnly": "yarn build && cp -f ../../README.md ./",
    "test": "jest",
    "_build": "microbundle --no-compress --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx",
    "build": "yarn _build",
    "watch": "yarn _build watch"
  },
  "repository": "git+https://github.com/subuta/sigform.git",
  "keywords": [],
  "author": "subuta <shunta.3110@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/subuta/sigform/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/subuta/sigform#readme",
  "peerDependencies": {
    "react": "^16.14.0 || 17.x || 18.x"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@types/flat": "^5.0.2",
    "debounce-fn": "^5.1.2",
    "flat": "^5.0.2",
    "immer": "^10.0.2",
    "react-fast-compare": "^3.2.2",
    "tiny-invariant": "^1.3.1",
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^10.11.2",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/react": "18.2.21",
    "@types/react-dom": "^18.2.7",
    "jest": "^29.6.4",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1"
  },
  "resolutions": {
    "react": "18.2.0"
  },
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
